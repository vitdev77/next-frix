generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name     String
  email    String   @unique
  password String
  role     UserRole @default(USER)

  provider   String?
  providerId String?

  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt
}

model Brand {
  id Int @id @default(autoincrement())

  name     String
  imageUrl String?

  series Series[]

  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt
}

model Series {
  id Int @id @default(autoincrement())

  name String

  products Product[]

  brandId Int
  brand   Brand @relation(fields: [brandId], references: [id])

  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  name     String
  imageUrl String

  seriesId Int
  series   Series @relation(fields: [seriesId], references: [id])

  productColorId Int
  productColor   ProductColor @relation(fields: [productColorId], references: [id])

  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt
}

model ProductColor {
  id Int @id @default(autoincrement())

  products Product[]

  name String

  createdAt DateTime @default(now())
  updatadAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}
